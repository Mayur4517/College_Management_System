<div class="container mt-5">
  <h1>Your Grades</h1>

  <div class="card">
    <div class="card-body">
      <h2>Grades Summary</h2>

      <table class="table">
        <thead>
          <tr>
            <th>Course Name</th>
            <th>Exam Date</th>
            <th>Marks Obtained</th>
          </tr>
        </thead>
        <tbody>
          <% if (marks && marks.length > 0) { %>
            <% marks.forEach(function(mark) { %>
              <tr>
                <td><%= mark.course_name %></td>
                <td><%= mark.exam_date %></td>
                <td><%= mark.marks_obtained %></td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="3">No marks available yet.</td>
            </tr>
          <% } %>
        </tbody>
      </table>

      <a href="/student" class="btn btn-primary">Back to Student Dashboard</a>
    </div>
  </div>
</div>
