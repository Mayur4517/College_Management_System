<%- include('partials/header') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar Menu -->
    <nav class="col-md-2 d-none d-md-block sidebar">
      <div class="sidebar-sticky">
        <h5 class="text-light text-center my-4">Admin Portal</h5>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link text-light active" href="/admin">
              <i class="fas fa-tachometer-alt"></i>
              <span class="menu-text"> Dashboard</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/viewUsers">
              <i class="fas fa-users"></i>
              <span class="menu-text"> Manage Users</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/viewCourses">
              <i class="fas fa-book"></i>
              <span class="menu-text"> Manage Courses</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/manageDepartments">
              <i class="fas fa-building"></i>
              <span class="menu-text"> Manage Departments</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" href="/login">
              <i class="fas fa-sign-out-alt"></i>
              <span class="menu-text"> Logout</span>
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <h3 class="text-center text-muted my-4">Welcome to Your Admin Portal!</h3>

      <div class="card shadow-lg border-0 animated-card">
        <div class="card-body">
          <h2 class="text-center gradient-text">Admin Dashboard</h2>

          <table class="table table-hover mt-4">
            <thead class="thead-dark">
              <tr>
                <th>Action</th>
                <th>Description</th>
              </tr>
            </thead>
            <tbody>
              <tr class="table-info">
                <td>
                  <a href="/viewUsers" class="btn futuristic-button">Manage Users</a>
                </td>
                <td>View, add, update, and delete users in the system.</td>
              </tr>
              <tr class="table-warning">
                <td>
                  <a href="/viewCourses" class="btn futuristic-button">Manage Courses</a>
                </td>
                <td>Create and manage courses available for students.</td>
              </tr>
              <tr class="table-success">
                <td>
                  <a href="/manageDepartments" class="btn futuristic-button">Manage Departments</a>
                </td>
                <td>Add, update, and delete department information.</td>
              </tr>

            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>
</div>

<style>
  body {
    background-color: #e6f7ff; /* Light Blue Background */
    font-family: 'Arial', sans-serif; /* Font Style */
    color: #333;
  }

  .sidebar {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    z-index: 100;
    height: 100%;
    padding: 48px 0 0; /* Space for navbar */
    background-color: #003366; /* Dark Blue for Sidebar */
    transition: all 0.3s ease;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.5); /* Deeper shadow for futuristic feel */
  }

  .sidebar .nav-link {
    color: #f8f9fa;
    transition: background-color 0.3s ease, padding 0.3s ease, transform 0.2s ease;
    padding: 15px 20px; /* Increased padding for better touch targets */
    border-radius: 5px; /* Slightly rounded corners */
    display: flex;
    align-items: center;
    position: relative; /* For pseudo-elements */
    overflow: hidden; /* For animation */
  }

  .sidebar .nav-link:hover {
    background: rgba(255, 255, 255, 0.1); /* Lighten background on hover */
  }

  .sidebar .nav-link i {
    margin-right: 10px; /* Space between icon and text */
    font-size: 1.5em; /* Icon size */
    transition: transform 0.3s ease, color 0.3s ease; /* Animation for icons */
  }

  .sidebar .nav-link:hover i {
    transform: scale(1.1); /* Enlarge icon on hover */
    color: #fff; /* Change icon color on hover */
  }

  .gradient-text {
    background: linear-gradient(90deg, #6a5acd, #00bfff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 2.5rem; /* Larger font size for emphasis */
  }

  .animated-card {
    animation: fadeIn 0.5s ease-in-out;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .table th {
    text-align: center;
  }

  .table td {
    vertical-align: middle;
  }

  .table-hover tbody tr:hover {
    background-color: rgba(0, 123, 255, 0.1);
  }

  .futuristic-button {
    position: relative;
    overflow: hidden;
    padding: 12px 20px;
    border: none;
    border-radius: 30px;
    color: #fff;
    background: linear-gradient(45deg, #6a5acd, #00bfff);
    box-shadow: 0 8px 20px rgba(0, 123, 255, 0.5);
    transition: all 0.4s ease;
    font-size: 1.2rem; /* Larger button font */
  }

  .futuristic-button:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 25px rgba(0, 123, 255, 0.7);
    background: linear-gradient(45deg, #00bfff, #6a5acd); /* Reverse gradient on hover */
  }
</style>

<%- include('partials/footer') %>
