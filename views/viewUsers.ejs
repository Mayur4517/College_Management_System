<div class="container mt-5">
  <h1 class="text-center">All Registered Users</h1>

  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow-lg border-0 animated-card creative-card">
        <div class="card-body text-center"> <!-- Centered button -->
          <a href="/register" class="btn btn-creative mb-3">Add New User</a>
          <p class="mb-4">View, update, or delete user accounts.</p>

          <div class="table-responsive text-nowrap">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Email</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Role</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(user => { %>
                  <tr>
                    <td><%= user.email %></td>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.role %></td>
                    <td>
                      <div class="d-flex justify-content-start">
                        <!-- Update Button with Icon -->
                        <a href="/updateUser?id=<%= user.email %>" class="btn btn-sm btn-warning me-2">
                          <i class="ri-pencil-line me-1"></i> Update
                        </a>
                          <!-- Delete Button with Icon -->
                        <a href="/deleteUser?id=<%= user.email %>" class="btn btn-sm btn-danger">
                          <i class="ri-delete-bin-6-line me-1"></i> Delete
                        </a>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        <a href="/admin" class="btn btn-primary mt-3">Back to Dashboard</a>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #e6f7ff; /* Light Blue Background */
    font-family: 'Arial', sans-serif; /* Font Style */
    color: #333;
  }

  .creative-card {
    animation: fadeInUp 0.5s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translate3d(0, 100%, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  .btn-creative {
    background: linear-gradient(45deg, #6ab04c, #1dd1a1);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 30px;
    font-weight: bold;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  .btn-creative:hover {
    background: linear-gradient(45deg, #1dd1a1, #6ab04c);
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(0, 0, 0, 0.3);
  }

  .btn-creative:active {
    transform: translateY(0);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }
</style>

