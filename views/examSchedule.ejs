<div class="container mt-5">
  <h1 class="text-center ">Exam Schedule</h1>

  <div class="card shadow-lg border-0 animated-card creative-card">
    <div class="card-body">
      <h2 class="text-center">Upcoming Exams</h2>

      <table class="table table-hover table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Course Name</th>
            <th>Exam Date</th>
            <th>Exam Time</th>
          </tr>
        </thead>
        <tbody>
          <% exams.forEach(exam => { %>
            <tr>
              <td><%= exam.course_name %></td>
              <td><%= exam.exam_date %></td>
              <td><%= exam.exam_time %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <div class="text-center">
        <a href="/student" class="btn btn-primary">Back to Student Dashboard</a>
      </div>
    </div>
  </div>
</div>

<style>body {
  background-color: #e6f7ff; /* Light Blue Background */
  font-family: 'Arial', sans-serif; /* Font Style */
  color: #333;
}
