<div class="container mt-5">
  <h1 class="text-center">Enroll in Courses</h1>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg border-0 animated-card creative-card">
        <div class="card-body">
          <form action="/enrollCourses" method="POST">
            <div class="form-group">
              <label for="course" class="font-weight-bold">Available Courses</label>
              <select id="course" name="course" class="form-control" required>
                <option value="">Select a course</option>
                <% courses.forEach(course => { %>
                  <option value="<%= course.course_id %>"><%= course.course_name %></option>
                <% }); %>
              </select>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-success btn-block">Enroll</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

