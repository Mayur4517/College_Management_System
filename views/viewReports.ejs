<div class="container mt-5">
  <h1 class="text-center">All Reports</h1>

  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow-lg border-0 animated-card creative-card">
        <div class="card-body text-center">
          <a href="/addReport" class="btn btn-creative mb-3">Add Report</a>
          <p class="mb-4">View, update, or delete reports from the system.</p>

          <div class="table-responsive text-nowrap">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Report ID</th>
                  <th>Report Title</th>
                  <th>Created By</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody class="table-border-bottom-0">
                <% reports.forEach(report => { %>
                  <tr>
                    <td><%= report.report_id %></td>
                    <td><%= report.title %></td>
                    <td><%= report.created_by %></td>
                    <td>
                      <div class="d-flex justify-content-start">
                        <!-- Update Button with Icon -->
                        <a href="/updateReport?id=<%= report.report_id %>" class="btn btn-sm btn-warning me-2">
                          <i class="ri-pencil-line me-1"></i> Update
                        </a>
                        <!-- Delete Button with Icon -->
                        <a href="/deleteReport?id=<%= report.report_id %>" class="btn btn-sm btn-danger">
                          <i class="ri-delete-bin-6-line me-1"></i> Delete
                        </a>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        <a href="/admin" class="btn btn-primary mt-3">Back to Dashboard</a>
      </div>
    </div>
  </div>
</div>



