<div class="container mt-5">
  <h1 class="text-center">All Departments</h1>

  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow-lg border-0 animated-card creative-card">
        <div class="card-body text-center">
          <a href="/addDepartment" class="btn btn-creative mb-3">Add Department</a>
          <p class="mb-4">View, update, or delete departments from the system.</p>

          <div class="table-responsive text-nowrap">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Department ID</th>
                  <th>Department Name</th>
                  <th>Head Email</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody class="table-border-bottom-0">
                <% departments.forEach(department => { %>
                  <tr>
                    <td><i class="ri-building-line ri-22px text-info me-4"></i><%= department.department_id %></td>
                    <td><%= department.department_name %></td>
                    <td><%= department.head_email %></td>
                    <td>
                      <div class="d-flex justify-content-start">
                        <!-- Update Button with Icon -->
                        <a href="/updateDepartment?id=<%= department.department_id %>" class="btn btn-sm btn-warning me-2">
                          <i class="ri-pencil-line me-1"></i> Update
                        </a>
                        <!-- Delete Button with Icon -->
                        <a href="/deleteDepartment?id=<%= department.department_id %>" class="btn btn-sm btn-danger">
                          <i class="ri-delete-bin-6-line me-1"></i> Delete
                        </a>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        <a href="/admin" class="btn btn-primary mt-3">Back to Dashboard</a>
      </div>
    </div>
  </div>
</div>

