<div class="container mt-5">
  <h1 class="text-center">All Courses</h1>

  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow-lg border-0 animated-card creative-card">
        <div class="card-body text-center">
          <a href="/addCourse" class="btn btn-creative mb-3">Add New Course</a>
          <p class="mb-4">View, update, or delete courses from the system.</p>

          <div class="table-responsive text-nowrap">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Course ID</th>
                  <th>Course Name</th>
                  <th>Department</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% courses.forEach(course => { %>
                  <tr>
                    <td><%= course.course_id %></td>
                    <td><%= course.course_name %></td>
                    <td><%= course.department_name %></td>
                    <td>
                      <div class="d-flex justify-content-start">
                        <!-- Update Button with Icon -->
                        <a href="/updateCourses" class="btn btn-sm btn-warning me-2">
                          <i class="ri-pencil-line me-1"></i> Update
                        </a>
                        <!-- Delete Button with Icon -->
                        <a href="/deleteCourse?id=<%= course.course_id %>" class="btn btn-sm btn-danger">
                          <i class="ri-delete-bin-6-line me-1"></i> Delete
                        </a>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        <a href="/admin" class="btn btn-primary mt-3">Back to Dashboard</a>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-color: #e6f7ff; /* Light Blue Background */
