<!-- Main Content -->
<div class="container mt-5 mb-5">
  <h1 class="text-center gradient-text">------------------------------</h1>
  <h1 class="text-center gradient-text">Add Department</h1>
  <h1 class="text-center gradient-text">------------------------------</h1>

  <div class="row justify-content-center mt-4">
    <div class="col-sm-10 col-md-8 col-lg-6">
      <div class="card shadow-lg border-0 animated-card">
        <div class="card-body p-5">
          <form action="/faculty" method="POST" id="departmentForm">
            <!-- Email Field (Read-Only) -->
            <div class="form-group mb-4">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control shadow-sm" name="email" value="<%= email %>" readonly />
            </div>
            
            <!-- First Name Field -->
            <div class="form-group mb-4">
              <label for="f_name" class="form-label">First Name</label>
              <input type="text" class="form-control shadow-sm" name="f_name" required />
            </div>
            
            <!-- Last Name Field -->
            <div class="form-group mb-4">
              <label for="l_name" class="form-label">Last Name</label>
              <input type="text" class="form-control shadow-sm" name="l_name" required />
            </div>

            <!-- Department Selection -->
            <div class="form-group mb-4">
              <label for="department" class="form-label">Department Name</label>
              <select id="department" name="department" class="form-control shadow-sm" required>
                <option value="">Select a department</option>
                <option value="1">Computer Science</option>
                <option value="2">ECE</option>
                <option value="3">Nano Technology</option>
                <option value="4">Basic Science</option>
              </select>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-gradient w-100">Submit Department</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

