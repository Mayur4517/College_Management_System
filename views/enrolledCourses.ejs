<div class="container mt-5">
  <h1 class="text-center ">Your Enrolled Courses</h1>

  <div class="card shadow-lg border-0 animated-card creative-card">
    <div class="card-body">
      <table class="table table-hover table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Course Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% enrolledCourses.forEach(course => { %>
            <tr>
              <td><%= course.course_name %></td>
              <td>
                <form action="/updateCourse/<%= course.course_id %>" method="GET" style="display:inline;">
                  <button type="submit" class="btn btn-warning btn-sm">Update</button>
                </form>
                <form action="/deleteCourse/<%= course.course_id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <div class="text-center">
        <a href="/student" class="btn btn-primary">Back to Dashboard</a>
      </div>
    </div>
  </div>
</div>

<style>
  .gradient-text {
    background: linear-gradient(45deg, #6a5acd, #ff69b4); /* SlateBlue to HotPink */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 2.5rem; /* Larger font size for emphasis */
  }

  .animated-card {
    animation: fadeIn 0.5s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .creative-card {
    background-color: #ffffff; /* Light background for card */
    border-radius: 15px; /* Rounded corners */
    border: 1px solid #e0e0e0; /* Subtle border */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Soft shadow */
    padding: 20px; /* Padding inside the card */
  }

  .table {
    margin-top: 20px; /* Space above the table */
  }

  .table-striped tbody tr:nth-of-type(odd) {
    background-color: #f9f9f9; /* Light gray for odd rows */
  }

  .table-hover tbody tr:hover {
    background-color: #ffebcd; /* Light color on hover */
    transition: background-color 0.3s; /* Smooth transition */
  }

  .thead-dark th {
    background-color: #343a40; /* Dark header background */
    color: white; /* White text color */
  }

  .btn-primary {
    background-color: #007bff; /* Primary button color */
    border: none;
  }

  .btn-primary:hover {
    background-color: #0056b3; /* Darker blue on hover */
  }
 body {
  background-color: #e6f7ff; /* Light Blue Background */
